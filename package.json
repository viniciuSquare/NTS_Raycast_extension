{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "nts",
  "title": "NTS ",
  "description": "",
  "icon": "command-icon.png",
  "author": "viniciuSquare",
  "license": "MIT",
  "commands": [
    {
      "name": "todays_tasks",
      "title": "List tasks for today",
      "description": "",
      "mode": "view"
    },
    {
      "name": "doing_tasks",
      "title": "Active tasks details",
      "description": "",
      "mode": "menu-bar"
    },
    {
      "name": "logs",
      "title": "Logs from the day",
      "description": "",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "personalAccessToken",
      "title": "Personal Access Token",
      "description": "Token to interact with Notion API",
      "type": "password",
      "mode": "view",
      "required": true
    }
  ],
  "dependencies": {
    "@notionhq/client": "^2.2.3",
    "@raycast/api": "^1.45.1",
    "@raycast/utils": "^1.4.14",
    "luxon": "^3.1.1"
  },
  "devDependencies": {
    "@types/luxon": "^3.1.0",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
